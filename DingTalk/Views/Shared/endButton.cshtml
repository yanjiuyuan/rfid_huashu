
@{
    Layout = null;
}

<!--添加审批人-->
<sam-approver-list :nodeList="nodeList" :single="true" :nodedata="nodeInfo"></sam-approver-list>
<template v-if="index==0">
    <el-form-item label="审批意见" prop="Mark">
        <sam-input :value.sync="ruleForm.Mark" style="width:600px;"></sam-input>
    </el-form-item>
    <el-form-item>
        <el-button type="primary" v-on:click="onSubmit('ruleForm')" :disabled="disablePage">同意</el-button>
        <el-button v-if="nodeInfo.IsBack" type="warning" v-on:click="returnBk" :disabled="disablePage">退回</el-button>
    </el-form-item>
</template>
<template v-if="index==2 &&( state=='被退回' || state=='已撤回')">
    <el-form-item>
        <el-button type="primary" v-on:click="reApproval" :disabled="disablePage">重新发起</el-button>
    </el-form-item>
</template>
<template v-if="index==2 && state=='未完成'">
    <el-form-item>
        <Ding2 :dinglist="dingList"></Ding2>
        <el-button v-if="rebackAble" type="warning" v-on:click="rebackSubmit" :disabled="disablePage">撤回</el-button>
    </el-form-item>
</template>
